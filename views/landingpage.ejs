    <script>
      document.addEventListener("DOMContentLoaded", function () {
        const menuButton = document.getElementById("menuButton");
        const mobileMenu = document.getElementById("mobileMenu");
        const closeMenuButton = document.getElementById("closeMenuButton"); // Ensure this ID matches your close button's ID

        // Function to toggle the menu's visibility
        function toggleMenu() {
          const isMenuOpen = mobileMenu.style.display === "block";
          mobileMenu.style.display = isMenuOpen ? "none" : "block";
        }

        // Event listener for opening the menu
        menuButton.addEventListener("click", toggleMenu);

        // Event listener for closing the menu (via the close button inside the menu)
        closeMenuButton.addEventListener("click", toggleMenu);

        // Optional: Close the menu by clicking outside of it
        window.addEventListener("click", function (e) {
          if (
            !mobileMenu.contains(e.target) &&
            !menuButton.contains(e.target) &&
            mobileMenu.style.display === "block"
          ) {
            toggleMenu();
          }
        });
      });

      window.addEventListener("scroll", function () {
        const navbar = document.getElementById("navbar");

        if (window.scrollY > 0) {
          navbar.classList.add("fixed");
        } else {
          navbar.classList.remove("fixed");
        }
      });
    </script>
